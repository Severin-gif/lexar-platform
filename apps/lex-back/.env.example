PORT=3001
NODE_ENV=production
CORS_ORIGIN=https://test.lexai-chat.com,https://admin-test.lexai-chat.com,https://lexai-chat.com

# Prisma
DATABASE_URL=postgresql://user:password@host:5432/lexar?schema=public
SHADOW_DATABASE_URL=postgresql://user:password@host:5432/lexar_shadow?schema=public

# Auth
JWT_SECRET=change-me
JWT_EXPIRES=7d
ADMIN_API_KEY=change-me
ADMIN_FORCE_RESET=false

# LLM / OpenRouter
OPENROUTER_KEY=change-me
OPENROUTER_BASE=https://openrouter.ai/api/v1
OPENROUTER_MODEL=deepseek/deepseek-chat
OPENROUTER_REFERER=https://lexai-chat.com
OPENROUTER_TITLE=Lexar
LLM_TIMEOUT_MS=20000

# Optional rate limit
DAILY_MESSAGE_LIMIT=0
