{
  "name": "lexar-backend",
  "version": "1.0.0",
  "description": "Lexar backend (NestJS + Prisma)",
  "main": "dist/main.js",
  "license": "ISC",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "start:watch": "nodemon --watch src -e ts --exec ts-node src/main.ts",
